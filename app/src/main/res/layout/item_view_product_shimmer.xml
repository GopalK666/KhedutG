      <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:orientation="horizontal"
        android:gravity="center">


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:elevation="4dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/imageSliderLeft"
                    android:layout_width="match_parent"
                    android:background="@color/shimmergray"
                    android:layout_height="140dp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvProductTitleLeft"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/shimmergray"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/tvProductQuantityLeft"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:background="@color/shimmergray"
                    android:textColor="#6F6F6F"
                    android:textSize="13sp"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/tvProductPriceLeft"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:background="@color/shimmergray"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <TextView
                        android:id="@+id/tvEditLeft"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/shimmergray"
                        android:textColor="@color/yellow"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:paddingHorizontal="10dp"
                        android:background="@drawable/bg_add_button"
                        android:gravity="center"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:elevation="4dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/imageSliderRight"
                    android:layout_width="match_parent"
                    android:background="@color/shimmergray"
                    android:layout_height="140dp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvProductTitleRight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/shimmergray"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/tvProductQuantityRight"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:background="@color/shimmergray"
                    android:textColor="#6F6F6F"
                    android:textSize="13sp"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/tvProductPriceRight"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:background="@color/shimmergray"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <TextView
                        android:id="@+id/tvEditRight"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/shimmergray"
                        android:textColor="@color/yellow"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:paddingHorizontal="10dp"
                        android:background="@drawable/bg_add_button"
                        android:gravity="center"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
